extends layout
block body
    a(href="/") << Back
    div(ng-controller="AddResultCtrl")
        p
            form.form-horizontal
                div.control-group
                    label.control-label {{1 | teamName }} goals:
                    div.controls
                        input(type="number", name="goals_1", required=true, max=14, min=0, size=2, ng-model="match.goals_1")
                div.control-group
                    label.control-label{{2 | teamName }} goals:
                    div.controls
                        input(type="number", name="goals_2", required=true, max=14, min=0, size=2, ng-model="match.goals_2")
                div.control-group
                    label.control-label{{lastOperationStatus}}
                    div.controls
                        button.btn(ng-click="addResult(match)") Submit


    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='js/lib/bootstrap.min.js')
    script(src='js/myAppCtrl.js')
